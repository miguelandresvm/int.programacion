// miguel andresvm.cpp : Defines the entry point for the console application.
//
#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "math.h"
using namespace std;

int main()
{
  int N,j,digito;
  cout<<"Ingrese el numero: ";
  cin>>N;
  j=0;
  while (N>0)
  {
   digito=N%10;
   N=N/10;
   if(digito%2!=0)
    j=j+1;
  }
  cout<<endl;
  cout<<"la cantidad de digitos pares es: "<<j<<"";
  getch();
  return 0;
}
