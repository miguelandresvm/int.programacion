 #include "stdafx.h"
 #include <iostream>
 #include "conio.h"
 #include "math.h"
 using namespace std;
 
 
 int main()
 {
  int b,h,c;
  float a,s;

   cout<<"introduce los 3 lados del triangulo" ; 
   cin>>h;
   cin>>b;
   cin>>c;
  s=((h+b+c)/2);
   a=(sqrt(s*(s-h)*(s-b)*(s-c)));
  cout<<"el area es: ";
 cout<<a;
 
   getch();
 return 0;

 }
